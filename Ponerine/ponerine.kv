#:kivy 1.0

#:import kivy kivy

<Ponerine>:
  orientation: 'vertical'
  Button:
    id: btnDebug
    text: "Debug"
    color: 0, 0, 0, 1
    background_color: 0, 0, 0, 1
    size_hint: 1, 1
    on_press: root.Debug()
  TextInput:
    id: txtDebug
    text: ""
    readonly: True
    #20
    font_size: int(root.Width/60)
    text: ""
    foreground_color: 0, 0, 0, 1
    background_color: 0, 0, 0, 1
    size_hint: 1, 8
  # IP ADDRESS
  GridLayout:
    cols: 2
    size_hint: 1, 0.7
    pos_hint: {'top': 1}
    Label:
      size_hint: 1, 0.8
      font_size: int(root.Width/25)
      color: 1, 1, 1, .8
      text: 'IP Address'
    TextInput:
      size_hint: 2, 0.8
      id: txtCamAddress
      font_size: int(root.Width/20)
      padding: [root.Width/50, (self.height - self.line_height)/2]
      text: '192.168.42.1'
  GridLayout:
    cols: 2
    padding: 10
    spacing: 10
    size_hint: 1, 2
    pos_hint: {'top': 1}
    Button:
      id: btnConnect
      color: (1, 1, 1, 1)
      font_size: int(root.Width/25)
      text: 'Connect'
      size_hint: .5, 1
      on_press: root.CamConnect()
    Button:
      id: btnDisconnect
      color: (1, 1, 1, 1)
      font_size: int(root.Width/25)
      text: 'Disconnect'
      size_hint: 0.5, 1
      disabled: True
      on_press: root.Disconnect()
    ToggleButton:
      id: btnTakePhoto
      color: (1, 1, 1, 1)
      font_size: int(root.Width/25)
      text: 'Take Photo'
      size_hint: 0.5, 1
      disabled: True
      on_press: root.TakePhoto()
    ToggleButton:
      id: btnRecordVideo
      color: (1, 1, 1, 1)
      font_size: int(root.Width/25)
      text: 'Start Record'
      size_hint: 0.5, 1
      disabled: True
      on_press: root.RecordVideo()
      